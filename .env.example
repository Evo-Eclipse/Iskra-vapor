# Iskra Telegram Bot Configuration

# Required: Your Telegram Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# Your Telegram Admin Chat ID, must be negative
TELEGRAM_ADMIN_CHAT_ID=-1234567890

# Operation Mode: 'webhook' or 'polling' (default: webhook)
TELEGRAM_BOT_MODE=polling

# WebHook Configuration (required if BOT_MODE=webhook)
TELEGRAM_WEBHOOK_URL=https://your-domain.com
TELEGRAM_WEBHOOK_SECRET=your_random_secret_here
TELEGRAM_WEBHOOK_PORT=8080

# Long Polling Configuration (used if BOT_MODE=polling)
TELEGRAM_POLLING_TIMEOUT=30
TELEGRAM_POLLING_LIMIT=100

# Optional: Delete existing webhook on startup (default: true)
TELEGRAM_DELETE_WEBHOOK_ON_START=true

# Optional: Override API base URL (for testing)
# API_BASE_URL=https://api.telegram.org
